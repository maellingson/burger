
  <h1>BURGERS!!!</h1>
<div class="row">
  <div class="panel col-lg-5 not-devoured">
    <h6>Burgers that have not been devoured:</h6>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="1">
          <button type="submit">Eat the burger!!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>
  <div class="panel col-lg-5 devoured">
<h6>Burgers that have been devoured!!</h6>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}


        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="0">
          <button type="submit">Switch Places</button>
        </form>


      </li>
    {{/if}}
  {{/each}}
</ul>
</div>


</div>


<h2>Add a Burger</h2>
<form action="burgers/create/" method="POST">

  <div class="form-group">
    <label>Burger Name:</label>
    <input type="text" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>